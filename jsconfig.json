{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "checkJs": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./src/*"
            ],
            "~~/*": [
                "./*"
            ],
            "@@/*": [
                "./*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        ".cache",
        "dist"
    ]
}